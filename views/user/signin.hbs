<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Sign In</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signin" method="post">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>
            <!-- To protect against session stealing, pass the session token in a hidden field.
            The server can then cross-reference that value with the one in the browser.
            Use the csurf package for this (CSRF token middleware) -->
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
        </form>
    </div>
</div>