{{# each products }}
    <div class="row">
        {{# each this }}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{ this.imagePath }}" alt="Vac Home" class="img-responsive">
                <div class="caption">
                    <h3>{{ this.title }}</h3>
                    <p class="description">
                         {{ this.description }}
                    </p>
                    <div class="clearfix">
                        <div class="price pull-left">${{ this.price }}</div>
                        <a href="/make-a-booking" class="btn btn-primary pull-right" role="button">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
{{/each}}